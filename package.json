{
    "name": "mestorosta",
    "version": "1.0.0",
    "main": "dist/main.js",
    "license": "",
    "scripts": {
        "build": "tsc && tsc-alias",
        "start": "node dist/main.js",
        "dev": "ts-node-dev -r tsconfig-paths/register --files ./src/main.ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "generate": "drizzle-kit generate:pg --config=drizzle.config.ts",
        "introspect": "drizzle-kit introspect:pg --config=drizzle.config.ts",
        "migrate": "ts-node src/db/postgres/migrate.ts"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.28.5",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.1",
        "pg": "^8.12.0",
        "postgres": "^3.3.5",
        "redis": "^4.7.0",
        "uuid": "^10.0.0",
        "winston": "^3.10.0",
        "zod": "^3.22.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/node": "^18.17.11",
        "@types/pg": "^8.11.6",
        "@types/redis": "^4.0.11",
        "@types/uuid": "^10.0.0",
        "drizzle-kit": "^0.19.13",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsc-alias": "^1.8.7",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2"
    }
}
